    .heading ЗАПЧАСТИ И ЭКИПИРОВКА
    .tabs
      .equipments__buttons.tabs__buttons.swiper-container
        .swiper-wrapper
          button.btn.swiper-slide.tabs__btn.tabs__btn--active(data-tab="equipments_tab1") Шлемы
          button.btn.swiper-slide.tabs__btn(data-tab="equipments_tab2") Куртки
          button.btn.swiper-slide.tabs__btn(data-tab="equipments_tab3") Штаны
          button.btn.swiper-slide.tabs__btn(data-tab="equipments_tab4") Защита
