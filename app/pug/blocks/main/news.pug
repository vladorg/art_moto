      bg_color: 'background: #143D8C'
    },
  ]

section.news
  .container
    .heading НОВИНКИ И АКЦИИ
    .news__inner
      a.news__item.news__item--big(href="#" data-aos="flip-left" data-aos-duration="1000" data-aos-anchor-placement="top-center")
        img(src='./img/news/1.png', alt="").news__img
        .heading.news__title
          span Распродажа одежды от Indian Motorcycle
        .news__date.ic-calendar_black 05-14.03
        button.btn.btn--prim подробнее
      each val in news_list

          a.news__item(href=val.href data-aos="flip-left" data-aos-duration="1000" data-aos-anchor-placement="top-center" class=val.img_bg ? 'news__item--bgImg' : null style= val.bg_color ? val.bg_color : null)
            if val.img_bg
              img(src=val.img_bg, alt="").news__img.news__img--bg
            else
              img(src=val.img, alt="").news__img

            if val.big_title
              .heading.news__title
                span= val.title
            else
              .heading.news__title= val.title

            if val.big_subtitle
              .news__subtitle
                span= val.subtitle
            else
              .news__subtitle= val.subtitle

            .news__date.ic-calendar_white= val.date
            button.btn.btn--prim подробнее
    a.btn.btn--default.news__more.visible-xs(href=more_href) СМОТРЕТЬ ВСЕ