    },
    {
      href: null,
      label: 'Кредит',
      last: true
    }
  ];
  let item_href = './new.html';
  let news_list = [
    {
      title: 'Кредит под 0%',
      subtitle: 'на весь электро-транспорт',
      date: '05-14.03',
      href: item_href,
      img_bg: './img/news/3.png'
